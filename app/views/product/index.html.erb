<div class="row py-4">
  <div class=" col-md-6 col-12">
    <h1>All Products</h1>
  </div>
  <div class=" col-md-6 col-12">
    <%= render 'searchForm' %>
  </div>
</div>

<div class="row border-bottom pb-4">
  <div class="col-12 col-md-2">
      <div class="card text-white bg-success mb-3">
          <div class="card-header">Total Products</div>
          <div class="card-body">
              <h1 class="card-title"><%= @all %></h1>
          </div>
      </div>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Stock</th>
      <th scope="col">Retail Price</th>
      <th scope="col">Supplier</th>
      <th scope="col">Supplier Mobile</th>
      <th scope="col">Created at</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @vendors.each do |product| %>
        <tr>
            <th scope="row"><%= product.id %></th>
            <td><%= product.product_name %></td>
            <td><%= product.stock %></td>
            <td><%= product.retailPrice %></td>
            <td><%= product.vendor_name %></td>
            <td><%= product.mobile %></td>
            <td><%= product.created_at %></td>
            <td>
                <%= link_to edit_product_path(product), class: 'btn btn-info' do %>
                    <span>Edit</span>
                <% end %>
                    
                <%= link_to product_path(product), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger' do %>
                    <span>Delete</span>
                <% end %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @vendors %>