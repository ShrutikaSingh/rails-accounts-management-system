<h1 class="py-4">All Journals</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Reference</th>
      <th scope="col">Date</th>
      <th scope="col">Summary</th>
      <th scope="col">Amount</th>
      <th scope="col">Created at</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @journals.each do |journal| %>
        <tr>
            <th scope="row"><%= journal.id %></th>
            <td><%= journal.reference %></td>
            <td><%= journal.date %></td>
            <td><%= journal.summary %></td>
            <td><%= journal.amount %></td>
            <td><%= journal.created_at %></td>
            <td>
                <%= link_to edit_journal_path(journal), class: 'btn btn-info' do %>
                    <span>Edit</span>
                <% end %>
                    
                <%= link_to journal_path(journal), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger' do %>
                    <span>Delete</span>
                <% end %>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @journals %>